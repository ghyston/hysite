@page "{pageNumber:int}"

@model hySite.IndexModel

@foreach (var item in @Model.Posts) {

    @Html.Partial("BlogEntry", item)
}

@if(@Model.NextPage != null)
{
    <a class="navigation" style="float: left" href="/@Model.NextPage">&#8592; Next</a>
}

@if(@Model.PrevPage != null)
{
    <a class="navigation" style="float: right" href="/@Model.PrevPage">Previous &#8594;</a>
}

<div class="copyright">&copy; Copyright @DateTime.Now.Year version: @Model.Version</div>