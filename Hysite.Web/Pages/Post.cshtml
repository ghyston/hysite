@page "{postName}"

@model PostPageModel

@Html.Partial("BlogEntry", @Model.BlogPost)

@if(!string.IsNullOrEmpty(@Model.NextPostFileName) )
{
    <a style="float: right" class="navigation" href="@Html.Raw(@Model.NextPostFileName)">Next entry</a>
}

@if(!string.IsNullOrEmpty(@Model.PrevPostFileName) )
{
    <a style="float: left" class="navigation" href="@Html.Raw(@Model.PrevPostFileName)">Prev entry</a>
}