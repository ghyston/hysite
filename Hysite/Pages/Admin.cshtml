@page
@model AdminPageModel

<p style="font-family: monospace; font-size: 24px; color: darkcyan;">Admin page</p>

@if (@Model.ExistingFileNames.Count() > 0)
{

<p>Existing files:</p>
<form method = "POST">
<ul>
@foreach (var filename in @Model.ExistingFileNames)
{
    <li>
        <input type="submit" value="del" asp-page-handler="Delete" asp-route-filename="@filename"/>
        &nbsp;
        @filename
    </li>
}
</ul>
</form>
<hr/>
}

@if (@Model.UploadError != "")
{
    <p style="color: red">Error: @Model.UploadError</p>
    <hr/>
}


<form method="post" enctype="multipart/form-data" >
    <div class="form-group">
        <div class="col-md-10">
            <label asp-for="UploadedFile" class="col-md-2 control-label"></label>
            <input asp-for="UploadedFile" type="file" accept = ".jpg, .jpeg, .png, .md"/>
        </div>
    </div>
    
    
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" asp-page-handler="UploadFile" />
        </div>
    </div>    
</form>

<hr/>
<form method = "POST">
    <input type="submit" value="Restart DB" asp-page-handler="RestartDB"/>
</form>


